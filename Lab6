CREATE OR REPLACE function acc2(year1 in varchar) return number as
  2  counter integer;
  3  BEGIN
  4  SELECT count(*) INTO counter
  5  FROM ACCIDENT a
  6  WHERE extract(year FROM accd_date)=year1;
  7  dbms_output.put_line('Total Accidents Function');
  8  return counter;
  9  END;
 10  /

