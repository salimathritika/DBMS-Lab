create table customer(
    cust# int, cname varchar(50),city varchar(30)
    ,primary key(cust#));

Table created.

 create table orders(
    order# int,odate date,cust# int,ordamt int,
    primary key(order#));

Table created.

 create table item(
    item# int,unitprice int,
    primary key(item#));

Table created.

 create table order_items(
    order# int,item# int,qty int,
    foreign key(order#) references orders on delete set null,
    foreign key(item#) references item on delete set null);

Table created.

 create table shipment(
    order# int, warehouse# int, shipdate date,
    primary key(warehouse#),
    foreign key(order#) references orders on delete set null);

Table created.

 create table warehouse(
    warehouse# int,city varchar(30),
    foreign key(warehouse#) references shipment on delete set null);

Table created.

 commit;

Commit complete.

 select cname as CUSTNAME,count(order#) as No_Of_Orders, avg(ordamt) as AVG_ORDER_AMT from (customer natural join orders)
  2  group by cname;

